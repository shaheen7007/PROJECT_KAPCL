<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_conform"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:weightSum="1"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.shaheen_mac.project.ConformActivity"
    tools:showIn="@layout/activity_conform"
    android:background="#ffffff">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="0dp"
       android:layout_gravity="center"
        android:id="@+id/imageView"
        android:layout_weight=".6"
        android:src="@drawable/s"
        android:layout_above="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp" />

    <TextView
        android:text="Your order has been placed successfully."
        android:layout_width="match_parent"
        android:textSize="25dp"

        android:textColor="#1319c1"
        android:layout_weight=".2"
        android:gravity="start"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_above="@+id/imageButton7"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="65dp" />

    <ImageButton
        android:layout_width="600dp"
        android:layout_height="0dp"
        android:id="@+id/imageButton7"
        android:layout_weight=".2"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/c"
        android:layout_marginBottom="10dp"
        />




</LinearLayout>
