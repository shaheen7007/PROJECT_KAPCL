<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_cart"
    android:weightSum="2"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.shaheen_mac.project.CartActivity"
    tools:showIn="@layout/activity_cart">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".12"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Cart"
        android:textAlignment="center"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:textColor="#858484" />





    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.58"
        android:background="#ffffff"
        android:id="@+id/cartlist"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:layout_weight="0.3"
        android:orientation="horizontal"
        android:weightSum="3"

        android:layout_marginStart="5dp"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_alignParentStart="true">


        <ImageButton
        android:layout_width="0dp"
            android:layout_weight="1"
        android:layout_height="47dp"
            android:background="#ffffff"

            android:id="@+id/imageButton3"
            android:scaleType="fitXY"
        android:src="@drawable/remove"
            android:layout_gravity="center"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignStart="@+id/linearLayout7" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Price to pay"
            android:id="@+id/textView7"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#3ea139"
            android:gravity="center"
            android:layout_alignTop="@+id/imageButton2"
            android:layout_toStartOf="@+id/imageButton2"
            android:layout_marginTop="30dp" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_weight="0.92"
        android:layout_gravity="center"
        android:layout_height="78dp"
        android:scaleType="fitXY"
        android:background="#ffffff"
        android:id="@+id/imageButton2"
        android:src="@drawable/ch"
        android:layout_toEndOf="@+id/textView"
        android:layout_below="@+id/cartlist" />





    </LinearLayout>


</LinearLayout>
