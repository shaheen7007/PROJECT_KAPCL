<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:id="@+id/nametextz"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:layout_below="@+id/text" />

    <TextView
        android:text="Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/priceTextz"
        android:textColor="#ef3207"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/nametextz"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="70dp">

    </TextView>

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="3dp"
        android:scaleType="fitXY"

        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:id="@+id/cartbtnidz"
        app:srcCompat="@drawable/rmvcart" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_toRightOf="@+id/nametextz"
        android:textSize="15dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="#1d23d1"
        android:id="@+id/qtyidz" />

</RelativeLayout>