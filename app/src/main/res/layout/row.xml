<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:weightSum="4"
    android:orientation="horizontal"
    android:layout_height="match_parent"

    >

    <WebView

        android:id="@+id/icon"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="80dp"

        android:layout_below="@+id/text"
        android:layout_alignParentStart="true" />




    <TextView
        android:text="Name"
       android:textAlignment="textStart"

        android:layout_width="0dp"
        android:layout_weight="1.15"
        android:layout_height="wrap_content"
        android:id="@+id/nametextz"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:layout_below="@+id/text"
        android:layout_toEndOf="@+id/icon"
        android:layout_marginTop="27dp" />
<LinearLayout
    android:layout_width="0dp"
    android:layout_weight="1.15"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="80dp">
    <TextView
        android:text="TextView"
       android:layout_gravity="center"
        android:textAlignment="center"
android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="#000000"
        android:id="@+id/qtyid"
        android:layout_below="@+id/nametextz"
        android:layout_toEndOf="@+id/nametextz" />

    <TextView
        android:text="Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAlignment="center"

        android:id="@+id/priceText"
        android:textColor="#ef3207"
        android:textSize="18dp"
        android:textStyle="bold"
         android:layout_below="@+id/text"
        android:layout_alignStart="@+id/qtyid" />
</LinearLayout>
    <ImageButton
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:gravity="center"

        android:layout_weight=".7"
        android:id="@+id/imageButton6"
        android:scaleType="fitCenter"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/cart"
        android:layout_alignBottom="@+id/qtyid"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/priceText"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="5dp" />


</LinearLayout>